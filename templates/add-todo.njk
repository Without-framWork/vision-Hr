{% extends "templates/layouts/app.html" %} {% block content %} {% set page_title
= "offers" %} {% include "templates/partials/header.njk" %} {% include
"templates/partials/sidebar.njk" %}
{% include
  "templates/partials/notifications-list.njk" %}

<div class="main-content">
  <div class="add-page">
    <form action="#">
      <h1>إضافة مهمة</h1>
      <div class="row">
        <div class="col-lg-3 col-md-6">
          <div class="form-group">
            <label> اسم الموظف </label>
            <select class="form-control">
              <option>حدد المحافظة</option>
              <option>مشكلة 2</option>
              <option>مشكلة 3</option>
              <option>مشكلة 4</option>
            </select>
          </div>
          <div class="form-group">
            <label> جهة التكليف </label>
  
            <input class="form-control" type="text" />
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="form-group">
            <label> رقم المهمة </label>
  
            <input class="form-control" type="text" />
          </div>
          <div class="form-group">
            <label> الوقت المطلوب </label>
  
            <div
              class="input-group date"
              id="datetimepicker3"
              data-target-input="nearest"
            >
              <input
                type="text"
                class="form-control datetimepicker-input"
                data-target="#datetimepicker3"
              />
              <div
                class="input-group-append"
                data-target="#datetimepicker3"
                data-toggle="datetimepicker"
              >
                <div class="input-group-text">
                  <img src="assets/images/clock-icon.svg" alt="" />
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="form-group">
            <label> نوع المهمة </label>
  
            <input class="form-control" type="text" />
          </div>
  
          <div class="form-group">
            <label> التاريخ المطلوب </label>
  
            <div
              class="input-group date calendar data-6"
              id="datetimepicker4"
              data-target-input="nearest"
            >
              <input
                type="text"
                class="form-control datetimepicker-input"
                data-target=".data-6"
              />
              <div
                class="input-group-append"
                data-target=".data-6"
                data-toggle="datetimepicker"
              >
                <div class="input-group-text">
                  <img src="assets/images/clander.svg" alt="#" />
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="form-group">
            <label> موقع المهمة </label>
  
            <input class="form-control" type="text" />
          </div>
          <div class="form-group">
            <label> درجة الأهمية </label>
            <select class="form-control">
              <option>حدد المحافظة</option>
              <option>مشكلة 2</option>
              <option>مشكلة 3</option>
              <option>مشكلة 4</option>
            </select>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>الملاحظات</label>
            <textarea class="form-control form-textarea"></textarea>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="choose-image">
            <h6>صورة الهوية</h6>
            <div class="picture">
              <img src="assets/images/download.jpg" alt="#" />
            </div>
            <div class="select-image">
              <p>لتحميل الصورة اضغط هنا</p>
              <span class="upload-icon">
                <img src="assets/images/upload-icon.svg" alt="#" />
              </span>
            </div>
          </div>
        </div>
      </div>
      <button type="submit" class="btn-main btn-xl">حفظ</button>

    </form>
  
  </div>
</div>
{% endblock %}
